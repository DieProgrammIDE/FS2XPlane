#!/bin/bash

IFS='
'

LS=/System/Library/Frameworks/CoreServices.framework/Versions/A/Frameworks/LaunchServices.framework/Versions/A/Support/lsregister	# MacOS 10.5
if [ ! -x $LS ]; then
    # From http://developer.apple.com/documentation/Carbon/Conceptual/MDImporters/Concepts/Troubleshooting.html
    LS=/System/Library/Frameworks/ApplicationServices.framework/Versions/A/Frameworks/LaunchServices.framework/Versions/A/Support/lsregister	# MacOS 10.3 & 10.4
    if [ ! -x $LS ]; then
        echo Can\'t find the lsregister tool!
        exit 1;
    fi;
fi

# Candidate application locations
for I in $($LS -dump | grep -v .Trash | grep -oE "/.+/CrossOver.*\.app" | sort -u); do
	if [ -d "$I" ]; then
		for J in $(find "$I" -type f -name wineloader); do
			if [ -x "$J" ]; then
				export WINELOADER="$J"
				break 2;
			fi;
		done;
	fi;
done

if [ ! "$WINELOADER" ]; then
	echo Not installed
	exit 1;
fi

unset DISPLAY
"$WINELOADER" ./MacOS/win32/fake2004.exe


# Make a default bottle
for I in $(find ~/Library/Application\ Support -type d -name "CrossOver*"); do
	if [ -d "$I/Bottles" ]; then
		if [ -a "$I/Bottles/default" ]; then
			BOTTLE="$I/Bottles/default"
			break;
		else
			for J in $(find "$I/Bottles" -type d -depth 1); do
				BOTTLE="$I/Bottles/default"
				ln -s "$J" $BOTTLE
				break 2;
			done;
		fi
	fi;
done;

if [ ! "$BOTTLE" ]; then
	exit;
fi


# Link fake 2004 into default bottle
if [ -e "$BOTTLE/dosdevices/c:/Program Files" ]; then
	if [ ! -e "$BOTTLE/dosdevices/c:/Program Files/Microsoft Games/Flight Simulator 9" ]; then
		mkdir -p "$BOTTLE/dosdevices/c:/Program Files/Microsoft Games"
		ln -s ~/FS2004 "$BOTTLE/dosdevices/c:/Program Files/Microsoft Games/Flight Simulator 9";
	fi
	if [ ! -e "$BOTTLE/dosdevices/c:/Program Files/Microsoft Games/Microsoft Flight Simulator X" ]; then
		mkdir -p "$BOTTLE/dosdevices/c:/Program Files/Microsoft Games"
		ln -s ~/FS2004 "$BOTTLE/dosdevices/c:/Program Files/Microsoft Games/Microsoft Flight Simulator X";
		touch ~/FS2004/fsx.exe;	# may not exist if upgrading
    fi;
fi
